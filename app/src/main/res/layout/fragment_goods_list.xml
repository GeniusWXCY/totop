<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/main_bg_color"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_main_head"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/title_bg_color">

            <include
                android:id="@+id/layout_goods_title"
                layout="@layout/goods_list_title_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/layout_category_bar"
            android:layout_height="@dimen/title_height"
            android:layout_below="@id/layout_main_head"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiobutton_boy_goods"
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:background="@drawable/radio_selector_top"
                android:button="@null"
                android:checked="true"
                android:gravity="center_vertical"
                android:layout_gravity = "center"
                android:text="@string/str_new"
                android:textColor="@drawable/radio_selector_top_text" />

            <RadioButton
                android:id="@+id/radiobutton_girl_goods"
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:background="@drawable/radio_selector_top"
                android:button="@null"
                android:gravity="center_vertical"
                android:layout_gravity = "center"
                android:text="@string/str_popularity"
                android:textColor="@drawable/radio_selector_top_text" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/layout_bottom_radio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_tab_radio_group_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_nine"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:text="@string/str_nine_nine"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:textColor="@drawable/radio_selector_bottom_text"
                android:textSize="@dimen/normal_text_size"
                android:background="@drawable/radio_selector_price"></RadioButton>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_top_tab_line" />

            <RadioButton
                android:id="@+id/radio_nineteen"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:text="@string/str_nineteen_nine"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/radio_selector_bottom_text"
                android:textSize="@dimen/normal_text_size"
                android:background="@drawable/radio_selector_price"></RadioButton>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_top_tab_line" />

            <RadioButton
                android:id="@+id/radio_twentynine"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:button="@null"
                android:gravity="center"
                android:text="@string/str_twentynine_nine"
                android:textColor="@drawable/radio_selector_bottom_text"
                android:textSize="@dimen/normal_text_size"
                android:background="@drawable/radio_selector_price"></RadioButton>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_top_tab_line" />

            <RadioButton
                android:id="@+id/radio_hirtynine_nine"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:button="@null"
                android:text="@string/str_thirtynine_nine"
                android:gravity="center"
                android:textColor="@drawable/radio_selector_bottom_text"
                android:textSize="@dimen/normal_text_size"
                android:background="@drawable/radio_selector_price"></RadioButton>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_top_tab_line" />

            <RadioButton
                android:id="@+id/layout_bottom_personal_center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:text="最近浏览"
                android:gravity="center"
                android:button="@null"
                android:textColor="@drawable/radio_selector_bottom_text"
                android:textSize="@dimen/normal_text_size"
                android:background="@drawable/radio_selector_price"></RadioButton>

        </RadioGroup>

        <!--<ListView
            android:id="@+id/listView_goods"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/layout_main_head"
            android:layout_above="@id/layout_bottom_radio"
            android:listSelector="@color/transparent"
            android:cacheColorHint="@color/transparent"
            android:divider="@null"
            android:dividerHeight="0.0dip"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:smoothScrollbar="true" />-->
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/listView_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_category_bar"
            android:layout_above="@id/layout_bottom_radio"
            android:listSelector="@color/transparent"
            android:cacheColorHint="@color/transparent"
            android:divider="@null"
            android:dividerHeight="0.0dip"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:smoothScrollbar="true"
            ptr:ptrHeaderTextColor="@color/black" />

    </RelativeLayout>
</RelativeLayout>